<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/ScrollView_main"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/background_app">

         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:orientation="vertical">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_above="@+id/account_name"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentLeft="true"
                 android:layout_marginStart="40dp"
                 android:layout_marginLeft="40dp"
                 android:layout_marginBottom="15dp"
                 android:text="@string/account_name"
                 android:textColor="@color/blue_text" />

             <EditText
                 android:id="@+id/account_name"
                 android:layout_width="315dp"
                 android:layout_height="42dp"
                 android:layout_above="@+id/account_userid"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginStart="28dp"
                 android:layout_marginLeft="28dp"
                 android:layout_marginEnd="28dp"
                 android:layout_marginRight="28dp"
                 android:layout_marginBottom="67dp"
                 android:background="@drawable/background_edittext_selector"
                 android:inputType="text"
                 android:selectAllOnFocus="true"
                 android:singleLine="true"
                 android:textColor="@color/blue_text"
                 android:textCursorDrawable="@color/blue_text"
                 android:includeFontPadding="true"
                 android:paddingLeft="14dp"></EditText>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_above="@+id/account_userid"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentLeft="true"
                 android:layout_marginStart="40dp"
                 android:layout_marginLeft="40dp"
                 android:layout_marginBottom="15dp"
                 android:text="@string/userid"
                 android:textColor="@color/blue_text" />

             <EditText
                 android:id="@+id/account_userid"
                 android:layout_width="306dp"
                 android:layout_height="42dp"
                 android:layout_above="@+id/account_password"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginStart="28dp"
                 android:layout_marginLeft="28dp"
                 android:layout_marginEnd="28dp"
                 android:layout_marginRight="28dp"
                 android:layout_marginBottom="67dp"
                 android:background="@drawable/background_edittext_selector"
                 android:inputType="text"
                 android:singleLine="true"
                 android:textColor="@color/blue_text"
                 android:textCursorDrawable="@color/blue_text"
                 android:includeFontPadding="true"
                 android:paddingLeft="14dp"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_above="@+id/account_password"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentLeft="true"
                 android:layout_marginStart="40dp"
                 android:layout_marginLeft="40dp"
                 android:layout_marginBottom="15dp"
                 android:text="@string/password"
                 android:textColor="@color/blue_text" />

             <EditText
                 android:id="@+id/account_password"
                 android:layout_width="325dp"
                 android:layout_height="42dp"
                 android:layout_above="@+id/account_url"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginStart="28dp"
                 android:layout_marginLeft="28dp"
                 android:layout_marginEnd="28dp"
                 android:layout_marginRight="28dp"
                 android:layout_marginBottom="67dp"
                 android:background="@drawable/background_edittext_selector"
                 android:importantForAccessibility="no"
                 android:inputType="textVisiblePassword"
                 android:singleLine="true"
                 android:textColor="@color/blue_text"
                 android:textCursorDrawable="@color/blue_text"
                 android:includeFontPadding="true"
                 android:paddingLeft="14dp"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_above="@+id/account_url"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentLeft="true"
                 android:layout_marginStart="40dp"
                 android:layout_marginLeft="40dp"
                 android:layout_marginBottom="15dp"
                 android:text="@string/url"
                 android:textColor="@color/blue_text" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_above="@+id/account_notes"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentLeft="true"
                 android:layout_marginStart="40dp"
                 android:layout_marginLeft="40dp"
                 android:layout_marginBottom="15dp"
                 android:text="@string/notes"
                 android:textColor="@color/blue_text" />

             <EditText
                 android:id="@+id/account_notes"
                 android:layout_width="363dp"
                 android:layout_height="wrap_content"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentBottom="true"
                 android:layout_marginStart="28dp"
                 android:layout_marginLeft="28dp"
                 android:layout_marginEnd="28dp"
                 android:layout_marginRight="28dp"
                 android:layout_marginBottom="90dp"
                 android:background="@drawable/background_edittext_selector"
                 android:inputType="textMultiLine"
                 android:lines="4"
                 android:textColor="@color/blue_text"
                 android:textCursorDrawable="@color/blue_text"
                 android:includeFontPadding="true"
                 android:paddingLeft="14dp"
                 android:gravity="start"
                />

             <EditText
                 android:id="@+id/account_url"
                 android:layout_width="345dp"
                 android:layout_height="42dp"
                 android:layout_above="@+id/account_notes"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginStart="28dp"
                 android:layout_marginLeft="28dp"
                 android:layout_marginEnd="28dp"
                 android:layout_marginRight="28dp"
                 android:layout_marginBottom="69dp"
                 android:background="@drawable/background_edittext_selector"
                 android:focusable="true"
                 android:includeFontPadding="true"
                 android:paddingLeft="14dp"
                 android:singleLine="true"
                 android:textColor="@color/blue_text"
                 android:textCursorDrawable="@color/blue_text" />

         </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@android:style/ButtonBar"
        android:background="@drawable/background_bar_fadeblue">

        <Button
            android:id="@+id/save_button"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/background_input"
            android:text="@string/save"
            android:textColor="@color/white_text"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/cancel_button"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/background_input"
            android:text="@string/cancel"
            android:textColor="@color/white_text"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>
